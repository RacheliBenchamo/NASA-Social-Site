<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="/javascripts/funcs.js"></script>
<title>Feed</title>
</head>

<body class="parallax">
<div class="container py-3 text-border-black" id="main-screen">
    <div class="row text-center">
        <div class="error-message-center" id="errorCenter" hidden>
            <span class="error-message" id="errorMessage">
            </span>
        </div>
    </div>
    <div class="row">
        <div class="col-2 pt-4">
            <form action="/log-out" method="get"><button class="btn btn-light" type="submit"><i class="fa fa-sign-out my-1 mx-1"></i> Log out</button></form>
        </div>
        <div class="col d-flex pt-4">
            <div class="container-fluid">
                <div class="float-right">
                    <div class="card" style="width: 15rem; border: 2px solid white; border-radius: 40px; color: #fff !important;">
                        <div class="card-body d-flex align-items-center justify-content-center">
                            <p class="card-text my-3 mx-1 text-white"><h5 id="currUserName"><%= userName %></h5></p>
                            <img src="/images/userLogo.png" class="border rounded-circle me-2 mx-auto"
                                 alt="Avatar" style="height: 50px" />
                        </div>
                    </div>
                </div>
            </div>
            <p class="text-white" id="currEmail" hidden><%= email %></p>
        </div>
    </div>
    <div class="row">
        <div class="col-8 offset-2 text-white">
            <label for="datePicker">Pick a date</label>
            <input id="datePicker" class="form-control" type="date"/>
        </div>
    </div>
    <div class="text-center" id="spinner" hidden style="position: fixed; z-index: 9999;
             top: 50%; left: 50%; transform: translate(-50%,-50%);">
        <img src="/images/loading.gif" alt="Loading...">
    </div>
    <div class="container" id="controller-screen">
        <div class="row" >
            <div class='container py-3' id="data">
            </div>
        </div>
    </div>
</div>
<script>
    const closeErrorCenter = () => {
        document.getElementById('errorCenter').hidden = true;
    }
    document.addEventListener("DOMContentLoaded", function() {
        document.getElementById('datePicker').valueAsDate = new Date();
    });
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<%- include('includes/end.ejs') %>